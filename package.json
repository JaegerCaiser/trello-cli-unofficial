{
  "name": "trello-cli-unofficial",
  "type": "module",
  "version": "0.9.3",
  "private": false,
  "description": "Unofficial Trello CLI using Power-Up authentication, built with Bun for maximum performance",
  "author": "Matheus Caiser <matheus.kaiser@gmail.com> (https://www.mrdeveloper.com.br/)",
  "license": "MIT",
  "homepage": "https://github.com/JaegerCaiser/trello-cli-unofficial#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JaegerCaiser/trello-cli-unofficial.git"
  },
  "bugs": {
    "url": "https://github.com/JaegerCaiser/trello-cli-unofficial/issues"
  },
  "keywords": [
    "trello",
    "cli",
    "power-up",
    "api",
    "bun",
    "typescript",
    "i18n",
    "internationalization"
  ],
  "module": "main.ts",
  "bin": {
    "trello-cli-unofficial": "./bin/cli.js",
    "tcu": "./bin/cli.js"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "PAT_SETUP.md",
    "README.md",
    "bin",
    "bun.lock",
    "bunfig.toml",
    "dist",
    "install.sh",
    "main.ts",
    "scripts",
    "src"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "bun run main.ts",
    "dev": "bun run --watch main.ts",
    "build": "bun build main.ts --outdir ./dist --target node",
    "install-global": "./install.sh",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:coverage": "bun test --coverage",
    "test:coverage:threshold": "bun test --coverage --coverage-reporter=lcov && bun run scripts/check-coverage.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:json": "node -e \"JSON.parse(require('fs').readFileSync(process.argv[1], 'utf8')); console.log('JSON is valid')\" --",
    "typecheck": "tsc --noEmit",
    "commitlint": "commitlint --edit",
    "validate": "bun run lint && bun run typecheck && bun run test:coverage:threshold",
    "version:patch": "bun version patch && git push --follow-tags",
    "version:minor": "bun version minor && git push --follow-tags",
    "version:major": "bun version major && git push --follow-tags",
    "prepublishOnly": "bun run validate && bun run build",
    "postinstall": "node scripts/check-dependencies.js"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/node": "^24.10.0",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.3.2",
    "i18next": "^25.6.1",
    "inquirer": "^12.10.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "eslint": "^9.39.1",
    "eslint-plugin-format": "^1.0.2",
    "lint-staged": "^16.2.6"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "gitHooks": {
    "commit-msg": "bun run commitlint"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "eslint --max-warnings 0"
    ],
    "*.json": [
      "bun run lint:json"
    ]
  }
}

