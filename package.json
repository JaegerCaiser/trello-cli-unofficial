{
  "name": "trello-cli-unofficial",
  "type": "module",
  "version": "0.13.10",
  "private": false,
  "description": "Unofficial Trello CLI using Power-Up authentication, built with Bun for maximum performance",
  "author": "Matheus Caiser <matheus.kaiser@gmail.com> (https://www.mrdeveloper.com.br/)",
  "license": "MIT",
  "homepage": "https://github.com/JaegerCaiser/trello-cli-unofficial#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JaegerCaiser/trello-cli-unofficial.git"
  },
  "bugs": {
    "url": "https://github.com/JaegerCaiser/trello-cli-unofficial/issues"
  },
  "keywords": [
    "trello",
    "cli",
    "power-up",
    "api",
    "bun",
    "typescript",
    "i18n",
    "internationalization"
  ],
  "module": "main.ts",
  "bin": {
    "trello-cli-unofficial": "./bin/cli.js",
    "tcu": "./bin/cli.js"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "PAT_SETUP.md",
    "README.md",
    "bin",
    "bun.lock",
    "bunfig.toml",
    "dist",
    "install.sh",
    "main.ts",
    "scripts",
    "src"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "start": "bun run main.ts",
    "dev": "bun run --watch main.ts",
    "build": "bun build main.ts --outdir ./dist --target bun --no-minify",
    "install-global": "./install.sh",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:coverage": "bun test --coverage",
    "test:coverage:threshold": "bun test --coverage --coverage-reporter=lcov && bun run scripts/check-coverage.js",
    "test:cross-platform": "node scripts/test-cross-platform.js",
    "test:build": "bun run build && echo '✅ Build successful'",
    "test:install": "bun run build && npm pack && npm install -g *.tgz && tcu --version && echo '✅ Installation successful'",
    "test:smoke": "bun run test:install && tcu --help > /dev/null && echo '✅ Smoke tests passed'",
    "test:docker": "./docker/test-all.sh",
    "test:docker:ubuntu": "./docker/test-ubuntu.sh",
    "test:docker:alpine": "./docker/test-alpine.sh",
    "test:docker:windows": "./docker/test-windows.sh",
    "test:docker:node": "./docker/test-node-versions.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:json": "node -e \"JSON.parse(require('fs').readFileSync(process.argv[1], 'utf8')); console.log('JSON is valid')\" --",
    "typecheck": "tsc --noEmit",
    "commitlint": "commitlint --edit",
    "validate": "bun run lint && bun run typecheck && bun run test:coverage:threshold",
    "version:patch": "bun version patch && git push --follow-tags",
    "version:minor": "bun version minor && git push --follow-tags",
    "version:major": "bun version major && git push --follow-tags"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/node": "^24.10.0",
    "bun": "^1.3.2",
    "commander": "^14.0.2",
    "dotenv": "^15.0.1",
    "fs-extra": "^11.3.2",
    "i18next": "^25.6.1",
    "inquirer": "^13.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "eslint": "^9.39.1",
    "eslint-plugin-format": "^1.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "eslint"
    ]
  }
}
